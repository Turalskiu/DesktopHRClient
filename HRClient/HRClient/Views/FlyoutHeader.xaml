<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRClient.Views.FlyoutHeader"
             HeightRequest="110"
             >

    <Frame 
        Margin="7,10,10,10"
        HasShadow="True"
        CornerRadius="20"
        BorderColor="LightGray"
        >

        <StackLayout Orientation="Horizontal">

            <Frame CornerRadius="100" 
               Padding="0" 
               WidthRequest ="80" 
               HeightRequest="80">

                <Image
                    x:Name="photo"
                    Aspect="AspectFill"
                    >
                </Image>
            </Frame>

            <Grid>
                <Label
                   Padding="10, 30, 0,0"
                   x:Name="label_username"
                   TextColor="DarkTurquoise"
                   FontFamily="monospace"
                   FontSize="20"
                   FontAttributes="Bold"
                />

                <Label 
                   Padding="10, 10, 0,0"
                   x:Name="label_email"
                   TextColor="DarkTurquoise"
                   FontFamily="monospace"
                   FontSize="12"
                   FontAttributes="Bold"
                />
            </Grid>
        </StackLayout>
    </Frame>

    
</ContentView>
